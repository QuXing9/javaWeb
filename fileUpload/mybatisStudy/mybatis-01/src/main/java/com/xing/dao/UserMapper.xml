<?xml version="1.0" encoding="UTF8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!--绑定一个对应的Dao/Mapper接口-->
<mapper namespace="com.xing.dao.UserMapper">
    <!--select查询语句-->
    <select id="getUserLike" resultType="com.xing.pojo.User">
        select * from mybatis.user where name like "%"#{value}"%";
    </select>

    <select id="getUserList" resultType="com.xing.pojo.User">
        select * from mybatis.user;
    </select>

    <select id="getUserById" parameterType="int" resultType="com.xing.pojo.User">
        select * from mybatis.user where id = #{id};
    </select>

    <insert id="addUser" parameterType="com.xing.pojo.User">
        insert into mybatis.user (id, name, pwd) values (#{id}, #{name}, #{pwd});
    </insert>

    <insert id="addUser2" parameterType="map">
        insert into mybatis.user (id, name, pwd) values (#{userId}, #{userName}, #{passWord});
    </insert>

    <insert id="updateUser" parameterType="com.xing.pojo.User">
        update mybatis.user set name=#{name}, pwd=#{pwd} where id = #{id}
    </insert>

    <delete id="deleteUser" parameterType="int">
        delete from mybatis.user where id = #{id};
    </delete>
</mapper>